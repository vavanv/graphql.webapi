@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-shield-exclamation"></i> Access Denied
                    </h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-lock display-1 text-danger"></i>
                    </div>
                    
                    <h4 class="text-danger mb-3">Access Denied</h4>
                    <p class="text-muted mb-4">
                        You do not have permission to access this resource. 
                        Please contact your administrator if you believe this is an error.
                    </p>
                    
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Note:</strong> If you believe you should have access to this resource, 
                        please log out and log back in with an account that has the appropriate permissions.
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house"></i> Go to Home
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">
                            <i class="bi bi-box-arrow-in-right"></i> Login with Different Account
                        </a>
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <small>
                        <i class="bi bi-info-circle"></i>
                        Current user: @User.Identity?.Name | 
                        Role: @User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-redirect after 10 seconds
        setTimeout(function() {
            window.location.href = '@Url.Action("Index", "Home")';
        }, 10000);
    </script>
} 